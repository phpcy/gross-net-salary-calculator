{
    "name": "phpcy/gross-net-salary-calculator",
    "type": "library",
    "description": "Library to calculate your net salary from your gross salary",
    "keywords": [
        "phpcy",
        "cyprus",
        "gross-net-salary-calculator"
    ],
    "homepage": "https://github.com/phpcy/gross-net-salary-calculator",
    "license": "MIT",
    "authors": [
        {
            "name": "PHP Cyprus",
            "email": "phpcyprus@gmail.com",
            "homepage": "https://github.com/phpcy",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "^6.0|^7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Phpcy\\GrossNetSalaryCalculator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phpcy\\GrossNetSalaryCalculator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "php vendor/bin/phpcs src tests",
        "phpcbf": "php vendor/bin/phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
